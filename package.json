{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "prebuild": "node -p \"'export const projectVersion = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "start tool": "npm run build && node ./dist/main.cli.js",
    "start server": "npm run build && node ./dist/main.rest.js | pino-pretty -c",
    "generate data": "npm run build && node ./dist/main.cli.js generate 5 C://testuserData http://localhost:3000",
    "import data": "npm run build && node ./dist/main.cli.js import C://testuserData mongodb://admin:test@127.0.0.1:27017/sales?authSource=admin",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "runMockApi": "npx json-server src/mocks/mock-server-data.json"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "axios": "^1.7.7",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.8.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "commander": "^12.1.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cors": "^2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "jose": "^5.9.6",
    "mime-types": "^2.1.35",
    "mongoose": "^8.7.1",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.9",
    "pino": "^9.4.0",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.7.0"
  }
}

{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "prebuild": "node -p \"'export const projectVersion = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "start tool": "npm run build && node ./dist/main.js",
    "start server": "npm run build && node ./dist/Application.js | pino-pretty -c",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "runMockApi": "npx json-server src/mocks/mock-server-data.json"
  },
  "devDependencies": {
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "axios": "^1.7.7",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.8.0",
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "commander": "^12.1.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cross-env": "7.0.3",
    "dotenv": "^16.4.5",
    "inversify": "^6.0.2",
    "mongoose": "^8.7.1",
    "pino": "^9.4.0",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.7.0"
  }
}
